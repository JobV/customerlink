.dropdown.settings-dropdown
  %span.glyphicon.glyphicon-cog#dropdownMenu1.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
  %ul.dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
    %li{:role => "presentation"}
      = link_to 'Integrations', integrations_path, role: 'menuitem', tabindex: '-1'
    %li.divider{:role => "presentation"}
    %li{:role => "presentation"}
      = link_to 'Sign out', destroy_user_session_path, method: :delete, role: 'menuitem', tabindex: '-1'

.new-customer
  = link_to 'New Customer', new_customer_path, class: 'btn btn-default'

.container
  .customers
    - @customers.each do |customer|
      .customer
        .name= link_to customer.name, customer

  .customers
    - @recurly.account.find_each do |account|
      .customer
        .name
          = link_to account.company_name, '#'
