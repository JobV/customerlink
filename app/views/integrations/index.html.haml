.super-center
  .bignav
    = link_to 'BACK', root_path
  %h3 Recurly

  - if @recurly.connected?
    %p.bg-success
      Connected
  - else
    %p.bg-danger
      Not connected

  = simple_form_for(@recurly) do |f|
    = f.input :api_key
    = f.input :subdomain
    = f.submit 'Update integration', class: 'btn btn-default'
